# Onboard: Micron_1100_MTFDDAK512TBN
DRIVE1 /dev/sda
# Onboard: Micron_1100_MTFDDAK512TBN
DRIVE2 /dev/sdb

SWRAID 1

SWRAIDLEVEL 1

# do not change
BOOTLOADER grub

# taken care of with post-install scripting
HOSTNAME Debian-96-stretch-64-minimal

# don't worry about LVM (yet)
# don't worry about XFS (yet)
PART swap  swap  64G
PART /boot ext3 512M
PART /     ext4  40G
# TODO: /pkg and /data should probably be gluster mounts with the backing
# store in a directory called /brick, or something.
PART /pkg  ext4  10G
PART /data ext4  all

IMAGE /root/.oldroot/nfs/install/../images/Debian-96-stretch-64-minimal.tar.gz
